body {
  background: #f9f7f7;
  color: #112d4e;
  font-family: source-serif-pro, serif;
}

a {
  border-bottom: 1px solid #3f72af;
  color: #3f72af;
  text-decoration: none;
  transition: color 0.2s ease;
}

p {
  line-height: 1.5em;
}

a:hover {
  border-color: #f95959;
  color: #f95959;
}

body {
  box-sizing: border-box;
  width: 100%;
}

.titleArea {
  background: #112d4e;
  color: #f9f7f7;
  padding: 30% 10% 10%;
}

h1 {
  font-size: 42px;
  line-height: 1.2em;
  font-weight: 600;
}

#information {
  font-size: 20px;
  line-height: 1.5em;
  font-weight: 400;
  padding: 10% 10% 30%;
}

#information p {
  margin-bottom: 35px;
}

/* Case Studies */
.caseStudy .titleArea {
  padding: 20% 10% 10%;
}

.caseStudy h1 {
  font-size: 32px;
}

.caseStudy .pageOverview {
  font-size: 20px;
  font-weight: 300;
  line-height: 1.3em;
  margin-top: 20px;
}

.caseStudy .section {
  margin-bottom: 50px;
}

.caseStudy > * {
  padding-left: 10%;
  padding-right: 10%;
}

.caseStudy h2 {
  margin: 10% auto 3%;
  font-weight: 600;
  font-size: 18px;
  font-variant: small-caps;
  margin-top: 100px;
  text-align: center;
}

.caseStudy h2:first-of-type {
  margin-top: 10%;
}

.caseStudy h3 {
  font-size: 22px;
  font-weight: 600;
  margin-bottom: 10px;
}

.caseStudy p {
  font-size: 18px;
}

.caseStudy img {
  width: 90%;
  padding: 5%;
  background: #f5f0f0;
  margin: 5% 0;
}

@media only screen and (min-width: 768px) {
  body {
    height: 100%;
  }

  #container {
    display: flex;
    flex-direction: row;
    height: 100%;
  }

  .titleArea {
    padding-top: 10%;
    padding-bottom: 50%;
  }

  .caseStudy > * {
    padding-left: 15rem;
    padding-right: 15rem;
  }

  .caseStudy .titleArea {
    padding: 10rem 15rem;
  }

  .caseStudy .titlearea {
    padding-bottom: 5%;
    font-size: 54px;
    flex: 1;
  }

  .caseStudy .section {
    padding-bottom: 5%;
    font-size: 54px;
    flex: 1;
  }

  .caseStudy h2 {
    margin: 6rem auto 2rem;
    padding: 1rem;
  }

  .caseStudy h2:first-of-type {
    margin-top: 4rem;
  }

  .caseStudy img {
    width: 45%;
    padding: 1rem;

    float: right;
    margin: 0 0 5rem 3rem;
  }

  .caseStudy .section:nth-child(even) img {
    float: left;
    margin: 0 3rem 5rem 0;
  }

  #information {
    flex: 4;
    font-size: 24px;
    line-height: 1.4em;
    padding-top: 10%;
  }

  #information p {
    margin-bottom: 45px;
  }
}
